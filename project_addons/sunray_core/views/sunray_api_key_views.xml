<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_sunray_api_key_tree" model="ir.ui.view">
        <field name="name">sunray.api.key.list</field>
        <field name="model">sunray.api.key</field>
        <field name="arch" type="xml">
            <list string="API Keys" create="true" edit="true">
                <field name="name"/>
                <field name="api_key_type" string="Type"/>
                <field name="owner_name" string="Owner" optional="show"/>
                <field name="worker_id" string="Worker" optional="show"/>
                <field name="key_display" string="API Key"/>
                <field name="description" optional="show"/>
                <field name="scopes" optional="show"/>
                <field name="is_active" widget="boolean_toggle"/>
                <field name="last_used" optional="show"/>
                <field name="usage_count" optional="show"/>
            </list>
        </field>
    </record>
    
    <!-- Search View -->
    <record id="view_sunray_api_key_search" model="ir.ui.view">
        <field name="name">sunray.api.key.search</field>
        <field name="model">sunray.api.key</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="api_key_type"/>
                <field name="owner_name"/>
                <field name="worker_id"/>
                <separator/>
                <filter name="active" string="Active" domain="[('is_active', '=', True)]"/>
                <filter name="inactive" string="Inactive" domain="[('is_active', '=', False)]"/>
                <separator/>
                <filter name="worker_keys" string="Worker Keys" domain="[('api_key_type', '=', 'worker')]"/>
                <filter name="admin_keys" string="Admin Keys" domain="[('api_key_type', '=', 'admin')]"/>
                <filter name="cli_keys" string="CLI Keys" domain="[('api_key_type', '=', 'cli')]"/>
                <group expand="0" string="Group By">
                    <filter string="Key Type" name="group_by_type" context="{'group_by': 'api_key_type'}"/>
                    <filter string="Status" name="group_by_status" context="{'group_by': 'is_active'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Form View -->
    <record id="view_sunray_api_key_form" model="ir.ui.view">
        <field name="name">sunray.api.key.form</field>
        <field name="model">sunray.api.key</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="regenerate_key" 
                            type="object" 
                            string="Regenerate Key" 
                            class="btn-warning"
                            invisible="not id"
                            confirm="Are you sure? The old key will stop working immediately."/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button"
                                type="object"
                                string="Refresh"
                                icon="fa-refresh"
                                name="btn_refresh" />
                    </div>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="api_key_type" required="1"/>
                            <field name="owner_name" placeholder="Worker name, admin username, or CLI user"/>
                            <field name="worker_id" readonly="1" invisible="api_key_type != 'worker'"/>
                            
                            <!-- For new records: editable key field -->
                            <field name="key" 
                                   invisible="id"
                                   placeholder="Leave empty to auto-generate"
                                   help="Leave empty for secure auto-generation (recommended)"/>
                            
                            <!-- For existing records: display with toggle -->
                            <div class="o_row" invisible="not id">
                                <field name="show_full_key" widget="boolean_toggle"/>
                                <span>Show Full Key</span>
                            </div>
                            
                            <!-- Partial display when toggle is off -->
                            <field name="key_display" 
                                   readonly="1"
                                   invisible="not id or show_full_key"
                                   string="API Key (Partial)"/>
                            
                            <!-- Full key with clipboard widget when toggle is on -->
                            <field name="key" 
                                   readonly="1"
                                   invisible="not id or not show_full_key"
                                   widget="CopyClipboardChar"
                                   string="API Key (Full)"
                                   groups="sunray_core.group_sunray_admin"/>
                            
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="is_active" widget="boolean_toggle"/>
                            <field name="scopes" placeholder="e.g., config:read,user:write"/>
                            <field name="last_used" readonly="1"/>
                            <field name="usage_count" readonly="1"/>
                            <field name="create_date" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_sunray_api_keys" model="ir.actions.act_window">
        <field name="name">API Keys</field>
        <field name="res_model">sunray.api.key</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_sunray_api_key_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first API key
            </p>
            <p>
                API keys authenticate Cloudflare Workers to the Sunray Server.
                Each Worker should have its own API key with appropriate permissions.
            </p>
        </field>
    </record>
</odoo>