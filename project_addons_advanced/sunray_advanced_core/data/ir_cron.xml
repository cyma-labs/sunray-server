<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron job to update host states when go-live date passes -->
        <record id="ir_cron_process_deployment_hosts" model="ir.cron">
            <field name="name">Sunray: Update Host States</field>
            <field name="model_id" ref="sunray_core.model_sunray_host"/>
            <field name="state">code</field>
            <field name="code">model._cron_process_deployment_hosts()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
            <field name="priority">5</field>
        </record>
    </data>
</odoo>