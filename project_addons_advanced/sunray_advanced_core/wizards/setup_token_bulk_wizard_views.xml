<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_setup_token_bulk_wizard_form" model="ir.ui.view">
        <field name="name">sunray.setup.token.bulk.wizard.form</field>
        <field name="model">sunray.setup.token.bulk.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Setup Tokens">
                <group>
                    <label for="user_count"/>
                    <div>
                        <field name="user_count" class="oe_inline"/> selected
                    </div>
                    <label for="ignored_user_count"/>
                    <div>
                        <field name="ignored_user_count" class="oe_inline"/> ignored
                        <button name="action_view_ignored_users"
                                type="object"
                                string="View List"
                                class="btn-sm btn-warning ms-2"
                                icon="fa-list"
                                invisible="ignored_user_count == 0"/>
                    </div>
                </group>

                <group>
                    <group string="Token Configuration">
                        <field name="host_id" options="{'no_create': True}"/>
                        <field name="token_name"/>
                        <field name="validity_days"/>
                        <field name="max_uses"/>
                    </group>
                    <group string="Options">
                        <field name="send_email"/>
                        <field name="force_regenerate" invisible="ignored_user_count == 0"/>
                    </group>
                </group>

                <notebook>
                    <page string="Selected Users" name="users">
                        <field name="user_ids" readonly="1" nolabel="1"/>
                    </page>
                    <page string="Ignored Users" name="ignored_users" invisible="ignored_user_count == 0">
                        <div class="alert alert-warning mb-3" role="alert">
                            <strong><i class="fa fa-exclamation-triangle" title="Warning"/> Warning:</strong>
                            <field name="ignored_user_count" class="oe_inline"/> user(s) will be ignored because they already have valid, unused setup tokens for this host.
                            <br/>
                            Check "Force New Tokens for Ignored Users" in the Options tab to regenerate tokens for these users.
                        </div>
                        <field name="ignored_user_ids" readonly="1" nolabel="1"/>
                    </page>
                    <page string="Access Rules" name="access_rules">
                        <field name="access_rule_ids" options="{'no_create': True}"/>
                    </page>
                    <page string="Advanced" name="advanced">
                        <group>
                            <field name="allowed_cidrs" nolabel="1" readonly="1"/>
                        </group>
                    </page>
                </notebook>

                <footer>
                    <button name="generate_tokens"
                            string="Generate Tokens"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_setup_token_bulk_wizard" model="ir.actions.act_window">
        <field name="name">Generate Setup Tokens (Bulk)</field>
        <field name="res_model">sunray.setup.token.bulk.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="sunray_core.model_sunray_user"/>
        <field name="binding_view_types">list</field>
    </record>
</odoo>
