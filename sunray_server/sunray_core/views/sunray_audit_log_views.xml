<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_sunray_audit_log_tree" model="ir.ui.view">
        <field name="name">sunray.audit.log.list</field>
        <field name="model">sunray.audit.log</field>
        <field name="arch" type="xml">
            <list create="false" edit="false" delete="false">
                <field name="timestamp"/>
                <field name="event_type"/>
                <field name="user_id"/>
                <field name="ip_address"/>
                <field name="severity"/>
                <field name="details"/>
            </list>
        </field>
    </record>
    
    <!-- Search View -->
    <record id="view_sunray_audit_log_search" model="ir.ui.view">
        <field name="name">sunray.audit.log.search</field>
        <field name="model">sunray.audit.log</field>
        <field name="arch" type="xml">
            <search>
                <field name="event_type"/>
                <field name="user_id"/>
                <field name="ip_address"/>
                <separator/>
                <filter name="error" string="Error" domain="[('severity', '=', 'error')]"/>
                <filter name="warning" string="Warning" domain="[('severity', '=', 'warning')]"/>
                <separator/>
                <filter name="today" string="Today" domain="[('timestamp', '>=', datetime.datetime.now().replace(hour=0, minute=0, second=0))]"/>
                <filter name="last_week" string="Last 7 Days" domain="[('timestamp', '>=', (datetime.datetime.now() - datetime.timedelta(days=7)))]"/>
                <separator/>
                <filter name="auth_events" string="Authentication" domain="[('event_type', 'in', ['auth_challenge', 'auth_success', 'auth_failure'])]"/>
                <filter name="session_events" string="Sessions" domain="[('event_type', 'in', ['session_created', 'session_revoked', 'session_expired'])]"/>
                <filter name="setup_events" string="Setup" domain="[('event_type', 'in', ['setup_token_created', 'setup_token_consumed', 'passkey_registered'])]"/>
                <group expand="0" string="Group By">
                    <filter string="Event Type" name="group_by_event" context="{'group_by': 'event_type'}"/>
                    <filter string="User" name="group_by_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Severity" name="group_by_severity" context="{'group_by': 'severity'}"/>
                    <filter string="Date" name="group_by_date" context="{'group_by': 'timestamp:day'}" />
                </group>
            </search>
        </field>
    </record>
    
    <!-- Form View -->
    <record id="view_sunray_audit_log_form" model="ir.ui.view">
        <field name="name">sunray.audit.log.form</field>
        <field name="model">sunray.audit.log</field>
        <field name="arch" type="xml">
            <form create="false" edit="false" delete="false">
                <sheet>
                    <group>
                        <group>
                            <field name="timestamp" readonly="1"/>
                            <field name="event_type" readonly="1"/>
                            <field name="severity" readonly="1"/>
                        </group>
                        <group>
                            <field name="user_id" readonly="1"/>
                            <field name="username" readonly="1"/>
                            <field name="ip_address" readonly="1"/>
                        </group>
                    </group>
                    
                    <group string="Event Details">
                        <field name="user_agent" readonly="1"/>
                        <field name="details" readonly="1" widget="text"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_sunray_audit_logs" model="ir.actions.act_window">
        <field name="name">Audit Logs</field>
        <field name="res_model">sunray.audit.log</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_sunray_audit_log_search"/>
        <field name="context">{'search_default_today': 1}</field>
        <field name="help" type="html">
            <p>
                Security audit logs track all authentication events,
                session management, and administrative actions.
            </p>
        </field>
    </record>
</odoo>